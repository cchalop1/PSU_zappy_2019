#!/usr/bin/python3
import sys
import getopt

class Client:
    def __init__(self):
        self.parse_argument()


    def parse_argument(self):
        optlist, _ = getopt.getopt(sys.argv[1:], 'n:h:p:')
        for name, value in optlist:
            if name == "-h":
                self.host = value
            elif name == "-n":
                self.team_name = value
            elif name == "-p":
                self.port = int(value)

client = Client()
